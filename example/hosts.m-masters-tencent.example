# 'deploy' node, which the ansible-playbooks usually run on
# variable 'NTP_ENABLED(=yes/no)' enables/disables the NTP server 'chrony'
[deploy]
10.12.97.11 NTP_ENABLED=no

# 'etcd' cluster must have odd member(s) (1,3,5,...)
# variable 'NODE_NAME' is the distinct name of a member in 'etcd' cluster
[etcd]
10.12.97.11 NODE_NAME=etcd1
10.12.97.12 NODE_NAME=etcd2
10.12.97.13 NODE_NAME=etcd3

[kube-master]
10.12.97.11
10.12.97.12
10.12.97.13

# 'loadbalance' node, with 'haproxy+keepalived' installed
[lb]
10.12.97.11 LB_IF="eth0" LB_ROLE=backup  # replace 'etho' with node's network interface
10.12.97.12 LB_IF="eth0" LB_ROLE=master

[kube-node]
10.12.97.21
10.12.97.22
10.12.97.23

# variable NEW_INSTALL: 'yes' to setup a new harbor server; 'no' to integrate with existed one
[harbor]
#172.21.248.242 HARBOR_DOMAIN="172.21.248.242" NEW_INSTALL=no

# group reserved, add new 'kube-master' in it
[new-master]
#192.168.1.5

# group reserved, add new 'kube-node' in it
[new-node]
#192.168.1.xx

[all:vars]
# --------- Main Variables ---------------
# Cluster Deployment Mode: allinone, single-master, multi-master
DEPLOY_MODE=multi-master

# Versions supported: v1.8, v1.9, v1.10, v1.11, v1.12
K8S_VER="v1.10"

# Cluster's Master IP, generated by 'keepalived' daemon on a 'lb' node here
# 'haproxy' daemon listens on port 8443, directs requests to real apiservers on port 6443
MASTER_IP="10.12.97.10"
KUBE_APISERVER="https://{{ MASTER_IP }}:8443"

# Network plugins supported: calico, flannel, kube-router, cilium, tencen-ccm
# tencen-ccm: tencentcloud-cloud-controller-manager
# tencen-ccm: please edit config file: roles/tencen-ccm/defaults/main.yml
CLUSTER_NETWORK="tencen-ccm"

# K8S Service CIDR, not overlap with node(host) networking
SERVICE_CIDR="10.253.255.0/24"

# Cluster CIDR (Pod CIDR), not overlap with node(host) networking
CLUSTER_CIDR="10.253.0.0/16"

# NodePort Range
NODE_PORT_RANGE="20000-40000"

# Kubernetes SVC IP (usually assigned with the first available IP of 'SERVICE_CIDR')
CLUSTER_KUBERNETES_SVC_IP="10.253.255.1"

# Cluster DNS Server's IP (assigned with an available IP of 'SERVICE_CIDR')
CLUSTER_DNS_SVC_IP="10.253.255.10"

# Cluster DNS Domain 最后不要加.
CLUSTER_DNS_DOMAIN="cluster.local"

# Basic auth for apiserver
BASIC_AUTH_USER="admin"
BASIC_AUTH_PASS="test1234"

# -------- Additional Variables --------------------
# Binaries Directory
bin_dir="/usr/local/bin"

# CA and other components cert/key Directory
ca_dir="/etc/kubernetes/ssl"

# Deploy Directory (kubeasz workspace), don't change the default value right now
base_dir="/etc/ansible"

# Kubernetes docker etcd ...data dir
data_dir="/data/kubernetes"

# Kubernetes docker etcd ...log dir
log_dir="/var/log/kubernetes"

# google contaainers images mirror url
#gcr_mirror="mirrorgooglecontainers"
gcr_mirror="ccr.ccs.tencentyun.com/weimob-k8s-"

# -------- certificate  Variables --------------------
CERT_ST="ShangHai"
CERT_L="Weimob"
