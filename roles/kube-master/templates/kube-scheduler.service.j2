[Unit]
Description=Kubernetes Scheduler
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
ExecStart={{ bin_dir }}/kube-scheduler \
  --address=127.0.0.1 \
  --master=http://127.0.0.1:8080 \
  --leader-elect=true \
{% if K8S_VER is regex('v1.1(0|1)') %}
  --feature-gates=VolumeSnapshotDataSource=true,CSINodeInfo=true,CSIDriverRegistry=true,KubeletPluginsWatcher=true,VolumeScheduling=true \
{% elif K8S_VER is regex('v1.1(2|3|4)') %}
  --feature-gates=VolumeSnapshotDataSource=true,CSINodeInfo=true,CSIDriverRegistry=true \
{% elif K8S_VER is regex('v1.1(5|6)') %}
  --feature-gates=VolumeSnapshotDataSource=true,CSINodeInfo=true,CSIDriverRegistry=true \
{% else %}
  --feature-gates=VolumeSnapshotDataSource=true \
{% endif %}
  --log-dir={{ log_dir }}/ \
  --logtostderr=false \
  --v=2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
