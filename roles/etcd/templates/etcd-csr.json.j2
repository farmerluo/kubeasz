{
  "CN": "etcd",
  "hosts": [
{% for host in groups['etcd'] %}
    "{{ host }}",
{% endfor %}
    "127.0.0.1"
  ],
  "key": {
    "algo": "rsa",
    "size": 2048
  },
  "names": [
    {
      "C": "CN",
      "ST": "{{ CERT_ST }}",
      "L": "{{ CERT_L }}",
      "O": "k8s",
      "OU": "System"
    }
  ]
}
